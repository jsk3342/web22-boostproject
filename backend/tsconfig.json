{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true /* Ensure that casing is correct in imports. */,

    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": ["**/*spec.ts"]
}
